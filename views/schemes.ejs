<%- include('partials/header2') %>

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Filtered Schemes for You</h2>
                <ol>
                    <li><a href="index.html">Scheme</a></li>
                    <li>Department</li>
                </ol>
            </div>

        </div>
    </div><!-- End Breadcrumbs -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">
            <div class="row g-5">
                <div class="row gy-4 posts-list">
                    <% scheme.forEach(function(element){ %>
                    <div class="col-lg-6">
                        <article class="d-flex flex-column">
                            <div class="post-img">
                                <img src="assets/img/blog/blog-1.jpg" alt="" class="img-fluid">
                            </div>

                            <h2 class="title">
                                <a href="#"><%= element.SchemeName %></a>
                            </h2>
                            <div class="meta-top">
                                <ul>
                                    <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a
                                            href="#">John Doe</a></li>
                                    <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a
                                            href="#"><time datetime="2022-01-01">Jan 1,
                                                2022</time></a></li>
                                    <li class="d-flex align-items-center"><i class="bi bi-chat-dots"></i> <a
                                            href="#">12 Comments</a></li>
                                </ul>
                            </div>
                            <div class="content">
                                <p>
                                    <%= element.SchemeInfo %>
                                </p>
                            </div>

                            <div class="read-more mt-auto align-self-end">
                                <a href="/apply/<%=element.SchemeID%>" class="buy-btn">Apply</a>
                                <a href="#">Read More</a>
                            </div>

                        </article>
                    </div><!-- End Scheme item -->
                    <%});%>


                </div><!-- End Scheme list -->

                <div class="blog-pagination">
                    <ul class="justify-content-center">
                        <li><a href="#">1</a></li>
                        <li class="active"><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                    </ul>
                </div><!-- End blog pagination -->
            </div>
        </div>
    </section><!-- End Blog Section -->

</main><!-- End #main -->

<%- include('partials/footer') %>